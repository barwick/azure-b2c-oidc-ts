{
  "name": "azure-b2c-oidc-ts",
  "version": "1.0.0",
  "description": "OIDC integration with Azure B2C in Typescript",
  "main": "index.ts",
  "repository": "git@github.com:barwick/azure-b2c-oidc-ts.git",
  "author": "Tom Barwick <tom_barwick@hotmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-openid-connect": "^2.13.0",
    "preact": "^10.13.2",
    "preact-render-to-string": "^6.0.2",
    "typescript": "^5.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22",
    "rollup": "^3.20.2"
  },
  "scripts": {
    "rollup": "rollup --config --bundleConfigAsCjs",
    "build": "tsc && yarn rollup",
    "start": "node dist/index.js",
    "reverse-proxy": "source .env && caddy reverse-proxy --from localhost:443 --to localhost:$PORT",
    "dev": "concurrently --kill-others \"yarn reverse-proxy\" \"tsc --watch\" \"yarn rollup -- --watch\" \"nodemon -q dist/index.js\""
  }
}
